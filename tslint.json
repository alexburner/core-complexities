{
  "rules": {
    "array-type": [true, "array"],
    "arrow-return-shorthand": [true, "multiline"],
    "await-promise": true,
    "ban": [
      true,
      "eval",
      {
        "name": ["*", "bind"],
        "message": "Native? Use an arrow function. jQuery? Use .on()"
      },
      {
        "name": "isFinite",
        "message": "Use the more strict Number.isFinite"
      },
      {
        "name": "isNaN",
        "message": "Use the more strict Number.isNaN"
      }
    ],
    "ban-comma-operator": true,
    "ban-types": {
      "options": [
        ["Object", "Avoid using the `Object` type. Did you mean `object`?"],
        [
          "Function",
          "Avoid using the `Function` type. Prefer a specific function type, like `() => void`."
        ],
        ["Boolean", "Avoid using the `Boolean` type. Did you mean `boolean`?"],
        ["Number", "Avoid using the `Number` type. Did you mean `number`?"],
        ["String", "Avoid using the `String` type. Did you mean `string`?"],
        ["Symbol", "Avoid using the `Symbol` type. Did you mean `symbol`?"]
      ]
    },
    "callable-types": true,
    "class-name": true,
    "comment-format": {
      "options": ["check-space"]
    },
    "curly": [true, "ignore-same-line"],
    "early-exit": [
      true,
      {
        "max-length": 4
      }
    ],
    "interface-over-type-literal": true,
    "member-access": [true, "check-accessor", "check-parameter-property"],
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "protected-static-field",
          "private-static-field",
          "public-static-method",
          "protected-static-method",
          "private-static-method",
          "public-instance-field",
          "protected-instance-field",
          "private-instance-field",
          "constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "naming-convention": [
      true,
      {
        "type": "type",
        "format": "PascalCase"
      },
      {
        "type": "enumMember",
        "format": "PascalCase"
      }
    ],
    "new-parens": true,
    "no-accessor-recursion": true,
    "no-angle-bracket-type-assertion": true,
    "no-banned-terms": true,
    "no-boolean-literal-compare": true,
    "no-collapsible-if": true,
    "no-conditional-assignment": true,
    "no-console": {
      "options": ["debug", "log"],
      "severity": "warning"
    },
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-imports": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-eval": true,
    "no-for-in": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-namespace": true,
    "no-return-await": true,
    "no-shadowed-variable": true,
    "no-sparse-arrays": true,
    "no-static-this": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-this-assignment": [
      true,
      {
        "allow-destructuring": true
      }
    ],
    "no-typeof-undefined": true,
    "no-unbound-method": [true, "ignore-static"],
    "no-unnecessary-bind": true,
    "no-unnecessary-class": true,
    "no-unnecessary-else": true,
    "no-unnecessary-type-assertion": true,
    "no-unsafe-finally": true,
    "no-unused": true,
    "no-unused-expression": true,
    "no-useless-files": true,
    "no-with-statement": true,
    "no-var-keyword": true,
    "object-literal-shorthand": true,
    "one-variable-per-declaration": {
      "options": ["ignore-for-loop"]
    },
    "only-arrow-functions": true,
    "ordered-imports": true,
    "prefer-const": [
      true,
      {
        "destructuring": "all"
      }
    ],
    "prefer-function-over-method": true,
    "prefer-method-signature": true,
    "prefer-object-spread": true,
    "prefer-readonly": true,
    "promise-must-complete": true,
    "radix": true,
    "restrict-plus-operands": true,
    "triple-equals": true,
    "use-isnan": true,
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-pascal-case",
        "allow-leading-underscore"
      ]
    }
  },
  "rulesDirectory": [
    "node_modules/tslint/lib/rules",
    "node_modules/tslint-consistent-codestyle/rules",
    "node_modules/tslint-microsoft-contrib"
  ]
}
